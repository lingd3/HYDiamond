      <view class='value'>{{diamond.symmetry}}</view>
    </view>
    <view class='item'>
      <view class='name'>荧光：</view>
      <view class='value'>{{diamond.fluorescence}}</view>
    </view>
    <view class='item'>
      <view class='name'>直径：</view>
      <view class='value'>{{diamond.diameter}}</view>
    </view>
    <view class='item'>
      <view class='name'>咖色：</view>
      <view class='value'>{{diamond.brown}}</view>
