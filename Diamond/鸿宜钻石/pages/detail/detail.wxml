      <view class='name'>地点：</view>
      <view class='value'>{{diamond.place}}</view>
    </view>
    <view class='item'>
      <view class='name'>状态：</view>
      <view class='value'>{{diamond.status}}</view>
    </view>
    <view class='item'>
      <view class='name'>货期：</view>
      <view class='value'>{{diamond.deliveryTime}}</view>
    </view>
    <view class='item'>
      <view class='name'>形状：</view>
      <view class='value'>{{diamond.shape}}</view>
    </view>
    <view class='item'>
      <view class='name'>重量：</view>
      <view class='value'>{{diamond.carat}}</view>
    </view>
    <view class='item'>
      <view class='name'>颜色：</view>
      <view class='value'>{{diamond.color}}</view>
    </view>
    <view class='item'>
      <view class='name'>净度：</view>
      <view class='value'>{{diamond.clarity}}</view>
    </view>
    <view class='item'>
